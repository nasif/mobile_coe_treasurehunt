<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="7dip" >

    <RelativeLayout
        android:id="@+id/instr_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/instr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Please scan the image to get Today&apos;s Question.Guess Where is the image" />

        <Button
            android:id="@+id/instr_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/instr_text"
            android:layout_centerInParent="true"
            android:text="Scan" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/answer_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dip"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sachin's Played his debut Test in which country?" />

        <RadioGroup
            android:id="@+id/radiobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question_text" >

            <RadioButton
                android:id="@+id/radioans1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Answer 1" />

            <RadioButton
                android:id="@+id/radioans2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Answer 2" />

            <RadioButton
                android:id="@+id/radioans3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Answer 3" />

            <RadioButton
                android:id="@+id/radioans4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Answer 4" />
        </RadioGroup>

        <Button
            android:id="@+id/sub_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiobtn"
            android:layout_centerInParent="true"
            android:text="Submit" />
    </RelativeLayout>

</RelativeLayout>